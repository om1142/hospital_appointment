    <script>

      var currentStep = 1;
      function nextStep(step) {
      // Hide the current step
      document.getElementById('step' + (step - 1)).style.display = 'none';
      
      // Show the next step
      document.getElementById('step' + step).style.display = 'block';
    
      // Update the current step
      currentStep = step;
    }
    
    function previousStep() {
      if (currentStep > 1) {
        // Hide the current step
        document.getElementById('step' + currentStep).style.display = 'none';
        
        // Show the previous step
        document.getElementById('step' + (currentStep - 1)).style.display = 'block';
        
        // Update the current step
        currentStep--;
      }
    }
    
    function submitForm() {
      // Process the form submission
      // You can retrieve the values entered by the user in each step using JavaScript
      var date = document.getElementById('date').value;
      var time = document.getElementById('time').value;
      var doctor = document.getElementById('doctor').value;
      var otp = document.getElementById('otp').value;
    
      // Perform any necessary validations or AJAX requests here
      
      // After submission, you can display a success message or redirect the user to another page
      alert('Form submitted successfully!');
    }
    
    window.addEventListener('DOMContentLoaded', function() {
      var labels = document.querySelectorAll('.time-slots label');
    
      labels.forEach(function(label) {
        label.addEventListener('click', function(event) {
          if (this.classList.contains('booked') || this.disabled) {
            event.preventDefault();
            event.stopPropagation();
            return false;
          }
    
          // Remove the 'selected' class from all labels
          labels.forEach(function(label) {
            label.classList.remove('selected');
          });
    
          // Add the 'selected' class to the clicked label
          this.classList.add('selected');
        });
      });
    });
    
    </script>
  
  
