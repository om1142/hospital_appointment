                <div class="quick-book-container-app">
                  <div id="step1">
                    <h2>Step 1: Enter Date</h2>
                    <!-- Date input field and Next button -->
                    <input class="inputapp" type="date" id="date">
                    <button class="buttonapp" type="submit" onclick="nextStep(2)">Next <i class="bi bi-arrow-right" style="padding-left: 5px;"></i></button>
                  </div>
                  
        
        
                  
                  <div id="step2" style="display: none;">
                    <h2>Step 2: Select Doctor</h2>
                    <!-- Doctor selection options and Next button -->
                    <select id="doctor">
                      <option value="" selected disabled>Select a doctor</option>
                      <option value="Dr. John Doe">Dr. John Doe</option>
                      <option value="Dr. Jane Smith">Dr. Jane Smith</option>
                    </select>
                    <button class="buttonapp" type="submit" onclick="previousStep()"><i class="bi bi-arrow-left" style="padding-right: 5px;"></i> Go Back</button>
                    <button class="buttonapp" type="submit" onclick="nextStep(3)">Next <i class="bi bi-arrow-right" style="padding-left: 5px;"></i></button>
                  </div>
        
                  <div id="step3" style="display: none;">
                    <h2>Step 3: Select Time</h2>
                    <div class="info">
                      <p><span class="color-indicator booked"></span>Booked time slots</p>
                      <p><span class="color-indicator selected"></span>Selected time slot</p>
                    </div>
                    <!-- Time input field and Next button -->
                    <!-- <input type="time" id="time"> -->
                    <div class="time-slots">
                      <input type="radio" name="time-slot" id="slot1" disabled>
                      <label for="slot1" class="booked">9:00 AM</label>
                      
                      <input type="radio" name="time-slot" id="slot2">
                      <label for="slot2">9:20 AM</label>
                      
                      <input type="radio" name="time-slot" id="slot3">
                      <label for="slot3">9:40 AM</label>
                      
                      <input type="radio" name="time-slot" id="slot1" disabled>
                      <label for="slot1" class="booked">10:00 AM</label>
                      
                      <input type="radio" name="time-slot" id="slot2">
                      <label for="slot2">10:20 AM</label>
                      
                      <input type="radio" name="time-slot" id="slot3">
                      <label for="slot3">10:40 AM</label>
        
                      <input type="radio" name="time-slot" id="slot1" disabled>
                      <label for="slot1" class="booked">11:00 AM</label>
                      
                      <input type="radio" name="time-slot" id="slot2">
                      <label for="slot2">11:20 AM</label>
                      
                      <input type="radio" name="time-slot" id="slot3">
                      <label for="slot3">11:40 AM</label>
        
                      <input type="radio" name="time-slot" id="slot1" disabled>
                      <label for="slot1" class="booked">12:00 AM</label>
                      
                      <input type="radio" name="time-slot" id="slot2">
                      <label for="slot2">12:20 PM</label>
                      
                      <input type="radio" name="time-slot" id="slot3">
                      <label for="slot3">12:40 PM</label>
        
                      <input type="radio" name="time-slot" id="slot1" disabled>
                      <label for="slot1" class="booked">1:00 PM</label>
                      
                      <input type="radio" name="time-slot" id="slot2">
                      <label for="slot2">1:20 PM</label>
                      
                      <input type="radio" name="time-slot" id="slot3">
                      <label for="slot3">1:40 PM</label>
        
                      <input type="radio" name="time-slot" id="slot1" disabled>
                      <label for="slot1" class="booked">2:00 PM</label>
                      
                      <input type="radio" name="time-slot" id="slot2">
                      <label for="slot2">2:20 PM</label>
                      
                      <input type="radio" name="time-slot" id="slot3">
                      <label for="slot3">2:40 PM</label>
        
