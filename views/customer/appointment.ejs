                      <input type="radio" name="time-slot" id="slot3">
                      <label for="slot3">4:40 PM</label>
        
                    </div>
                    <button class="buttonapp" type="submit" onclick="previousStep()"><i class="bi bi-arrow-left" style="padding-right: 5px;"></i> Go Back</button>
                    <button class="buttonapp" type="submit" onclick="nextStep(4)">Next <i class="bi bi-arrow-right" style="padding-left: 5px;"></i></button>
                  </div>
                  
                  
                  
                  <div id="step4" style="display: none;">
                    <h2>Step 4: Confirm OTP</h2>
                    <!-- OTP input field and Submit button -->
                    <input class="inputapp" type="text" id="otp">
                    <button class="buttonapp" type="submit" onclick="previousStep()"><i class="bi bi-arrow-left" style="padding-right: 5px;"></i> Go Back</button>
