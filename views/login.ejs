<%- include('./partials/header') %>
 
    <div class="bg-lblue">
    <div id="wrapper">
        <%- include('./partials/nav') %>

            <% if(err) {%>

                <% if(err.includes("Success") || err.includes("account") || err.includes("Successfully") ||
                    err.includes("successfully") || err.includes("Successfull") || err.includes("successfull") ) {%>

                    <div class="container col-md-6 col-xl-4 px-2 rounded-1">
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%=err %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                        </div>
                    </div>
                    <% } else { %>


                        <div class="container col-md-6 col-xl-4 px-2 rounded-1">
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%=err %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                        </div>
                        <% } %>
                            <% } %>

    

                                <div class="container bg-dark mt-5 col-md-5 col-xl-5 col-sm-5 px-5 py-2 mb-3 rounded-5">
                                    <div class="text-center fs-2 mt-3 text-light">Login</div>
                                    <div class="text-center mb-5 text-light">Please Enter your phone number and password
                                    </div>

                                    <form action="/login" method="post">
                                        <div class="form-floating mb-3">
                                            <input type="number" class="form-control" id="phone-number" name="phone"
                                                placeholder="012345678" pattern="[0-9]{10}" required>
                                            <label for="phone-number">Phone number</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" id="floatingPassword"
                                                name="password" placeholder="Password">
                                            <label for="floatingPassword">Password</label>
                                        </div>

                                        <div class="text-center">
                                            <a href="/forgotpassword" style="text-decoration:none;">Forgot password?</a>
                                        </div>
                                        <div class="text-center">
                                            <button class="btn btn-primary mt-4 col-3" type="submit">Login</button>
                                        </div>

                                        <div class="text-center fs-4 my-3 mt-3 text-light">Don't have an account? <a
                                                href="/signup" style="text-decoration:none;">Register</a>
                                        </div>
                                    </form>
                                </div>
                                </div>


    <%- include('./partials/footer') %>